  <body>
    <div id="formContainer">
      <form action="/session/password" method="put">
        <h2 class="mb-4">Restore Password</h2>
        <label for="password">Write your new password:</label>
        <input type="password" id="password" name="password" required />
        <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          defaultChecked="false"
          id="flexCheckDefault"
        />
        <label class="form-check-label">Show Password</label>
        </div>
                <button id="btnSignup" class="btn btn-secondary"><a class="nav-link" href="/successView">Save</a></button>

      </form>

    </div>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.0/socket.io.min.js"
